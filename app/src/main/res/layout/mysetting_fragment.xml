<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/setting_help"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#f5f8fa"
                android:src="@drawable/icon_help"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="35dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:text="使用帮助"/>
        </FrameLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/alignment_marker_color" />
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#f5f8fa">
            <ImageButton
                android:id="@+id/setting_qqgroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#f5f8fa"
                android:src="@drawable/icon_qqgruop"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="35dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:text="加入QQ群"/>
        </FrameLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/alignment_marker_color" />
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#f5f8fa">
            <ImageButton
                android:id="@+id/setting_mark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#f5f8fa"
                android:src="@drawable/icon_mark"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="35dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:text="功能评分"/>
        </FrameLayout>
        
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/alignment_marker_color" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/setting_bug"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#f5f8fa"
                android:src="@drawable/icon_help"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="35dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:text="BUG反馈"/>
        </FrameLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/alignment_marker_color" />
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/setting_survey"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#f5f8fa"
                android:src="@drawable/icon_survey"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="35dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:text="用户调研"/>
        </FrameLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/alignment_marker_color" />
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </FrameLayout>

    </LinearLayout>

</LinearLayout>